Q3


#include <stdio.h>
#include <string.h>

void sort_string(char *str) {
    int i, j;
    char temp;

    for (i = 0; i < strlen(str) - 1; i++) {
        for (j = i + 1; j < strlen(str); j++) {
            if (str[i] > str[j]) {
                temp = str[i];
                str[i] = str[j];
                str[j] = temp;
            }
        }
    }
}

void main() {
    char str[100];

    printf("Enter a string: ");
    fgets(str, 100, stdin);

    sort_string(str);

    printf("String in alphabetical order: %s\n", str);

}
